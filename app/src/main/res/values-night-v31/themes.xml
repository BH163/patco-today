        <item name="colorOnBackground">@color/material_dynamic_primary0</item>
        <item name="colorOnPrimary">@color/gm3_sys_color_dynamic_dark_on_primary</item>
        <item name="colorOnPrimaryContainer">@color/gm3_sys_color_dynamic_dark_on_primary_container</item>

        <item name="colorOnTertiary">@color/gm3_sys_color_dynamic_dark_on_tertiary</item>
        <item name="colorOnTertiaryContainer">@color/gm3_sys_color_dynamic_dark_on_tertiary_container</item>
        <item name="colorOutline">@color/material_dynamic_secondary60</item>
